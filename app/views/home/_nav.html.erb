<div id="user">
  <div class="row">
    <div class="small-12 columns">
      <h1>Logged in as <%= current_user.email %></h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 large-2 columns">
      <h3>&nbsp;</h3>
    </div>
    <div class="small-12 large-8 columns">
      <h3>
