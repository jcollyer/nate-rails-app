<%= form_for @teaching, :html => { :multipart => true } do |f| %>
  <% if @teaching.errors.any? %>
    <div id="error_explanation small-12 columns">
      <h2><%= pluralize(@teaching.errors.count, "error") %> prohibited this teaching from being saved:</h2>

      <ul>
      <% @teaching.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="large-4 small-12 columns">
    <%= f.label "Chapter" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="large-4 small-12 columns">
    <%= f.label :position %><br>
    <%= f.number_field :position %>
  </div>

  <div class="large-4 small-12 columns">
    <%= f.label "Ref URL" %><br>
    <%= f.text_field :refurl %>
  </div>


  <div class="large-4 small-12 columns">
    <%= f.label :mp3 %>
    <%= f.file_field :mp3 %>
  </div>

  <div class="large-4 small-12 columns">
   <%= f.collection_select(:biblebook_id, Biblebook.all, :id, :name) %>
  </div>
  <div class="large-4 small-12 columns">
    <%= f.submit %>
  </div>
<% end %>
