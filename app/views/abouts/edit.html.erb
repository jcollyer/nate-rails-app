<div class="row">
  <h1>Editing about</h1>
  <h3><%= link_to 'Back', abouts_path %></h3>
</div>
<div class="row">
  <%= form_for(@about) do |f| %>
    <% if @about.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@about.errors.count, "error") %> prohibited this about from being saved:</h2>

        <ul>
        <% @about.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="small-12 columns">
      <div class="field">
        <%= f.text_area :body, class: "edit-about" %>
      </div>
    </div>
    <div class="small-12 columns">
      <br>
      <div class="actions">
        <%= f.submit %>
      </div>
      <br>
    </div>
  <% end %>
</div>
