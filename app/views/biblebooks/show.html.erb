<div id="loader">
  <h3>LOADING</h3>
  <div class="spin">&nbsp;</div>
</div>

<div class="js-black-background"></div>
  <nav id="main-nav" class="new-nav">
    <h3 style="text-align:left;margin:8px 20px 6px;">
      <%= link_to "Back", root_url, class: "show-link" %>
    </h3>
  </nav>
  <div class="mobile-nav-buffer">&nbsp;</div>
  <div class="mobile-show-header">
    <%= image_tag @biblebook.image.url(:medium) %>
    <h2>Chapter</h2>
    </br>
  </div>
  <div class="playlist-mobile">
    <% @biblebook.teachings.each do |teaching| %>
      <div class="teaching-item">
        <div class="play-this-teaching button-play-list-mobile" data-name="<%= teaching.name %>" data-mp3="<%= teaching.mp3 %>" data-refurl="<%= teaching.refurl %>" data-podcasturl="<%= teaching.podcasturl %>" data-biblebook="<%= teaching.biblebook.name %>">
        </div>
        <div class="js-split"><%= teaching.name %></div>
      </div>
    <% end %>
  </div>


  <div id="player">
    <audio id="main-audio" preload="none" src=""></audio>
    <div id="seek_bar">
      <div id="progress_bar"></div>
    </div>
    <div id="controls">

      <div id="controls-part">
        <div id="play">
          <div id="play-pause" class="button-play"></div>
        </div>
        <div id="button-goback" class="block-button"><div id="icon-goback"></div></div>
        <div id="button-volume" class="block-button"><div id="volume-toggle" class="volume-mute"></div></div>
        <div class="block-button interactive-button" style="width:70px;"><a href="" id="button-read-along" target="_blank"></a></div>
        <div class="block-button interactive-button" style="width:68px;"><a href="" id="button-download" download="Nate's teaching"></a></div>
        <div class="block-button interactive-button" style="width:64px;"><a href="" id="button-podcast" target="_blank">&nbsp;</a></div>
      </div>
      <div id="controls-part">
        <div class="speed-10 speed block-button active-speed">1.0x</div>
        <div class="speed-13 speed block-button">1.3x</div>
        <div class="speed-15 speed block-button">1.5x</div>
        <div class="speed-17 speed block-button">1.7x</div>
        <div class="speed-20 speed block-button">2.0x</div>
      </div>
      <div id="controls-part">
        <div id="lesson-mod-info" itemprop="name"></div>

        <div class="social-button social_facebook">
          <a href="#"
             onclick="
              window.open(
                'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href),
                'facebook-share-dialog',
                'width=626,height=436');
              return false;">
          </a>
        </div>
        <div class="social-button social_twitter">
          <a class="twitter popup" href="http://twitter.com/share?text=Tweet%20about%20Nate's%20teachings."></a>
          <script>
            $('.popup').click(function(event) {
              var width  = 575,
                  height = 400,
                  left   = 0,
                  top    = 0,
                  url    = this.href,
                  opts   = 'status=1' +
                           ',width='  + width  +
                           ',height=' + height +
                           ',top='    + top    +
                           ',left='   + left;

              window.open(url, 'twitter', opts);

              return false;
            });
          </script>
        </div>
        <div class="social-button social_google">
          <a href="https://plus.google.com/share?url={nateholdridge.com}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            &nbsp;
          </a>
        </div>

      </div>
    </div>
  </div>

