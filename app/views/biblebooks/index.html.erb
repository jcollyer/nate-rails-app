<div class="row">
  <div class="small-12 columns">
    <h1>Listing biblebooks</h1>
  </div>
  <div class="small-12 columns">
    <h3><%= link_to 'New biblebook', new_biblebook_path %></h3>
    <h3><%= link_to 'back', root_url %></h3>
  </div>
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
      </thead>

      <tbody>
        <% @biblebooks.each do |biblebook| %>
          <tr>
            <td><%= biblebook.name %></td>
            <td><%= biblebook.position %></td>
            <td><%= image_tag biblebook.image.url(:thumb)%></td>
            <td><%= link_to 'Edit', edit_biblebook_path(biblebook) %></td>
            <td><%= link_to 'Destroy', biblebook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


